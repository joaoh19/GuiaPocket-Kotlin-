<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context="com.example.guiabairro.ui.DetalhesActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TÃ­tulo -->
            <TextView
                android:id="@+id/tvTituloDetalhes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Detalhes do ComÃ©rcio"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="16dp"/>

            <!-- Imagem -->
            <ImageView
                android:id="@+id/ivFotoComercio"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@color/light_gray"
                android:src="@android:drawable/ic_menu_gallery"
                android:contentDescription="Foto do comÃ©rcio"
                app:layout_constraintTop_toBottomOf="@id/tvTituloDetalhes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="16dp"/>

            <!-- Nome -->
            <TextView
                android:id="@+id/tvNome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nome do ComÃ©rcio"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primary_dark"
                app:layout_constraintTop_toBottomOf="@id/ivFotoComercio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"/>

            <!-- Tipo -->
            <TextView
                android:id="@+id/tvTipo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tipo: ComÃ©rcio"
                android:textSize="16sp"
                android:textColor="@color/primary_color"
                app:layout_constraintTop_toBottomOf="@id/tvNome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="16dp"/>

            <!-- DescriÃ§Ã£o -->
            <TextView
                android:id="@+id/tvDescricao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="DescriÃ§Ã£o detalhada do estabelecimento..."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvTipo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="24dp"/>

            <!-- Card InformaÃ§Ãµes de Contato -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardContato"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvDescricao"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/light_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Telefone -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ž Telefone"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvTelefone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp"/>

                    <!-- EndereÃ§o -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ EndereÃ§o"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvEndereco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp"/>

                    <!-- HorÃ¡rio -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â° HorÃ¡rio"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvHorario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- BotÃµes de AÃ§Ã£o -->
            <LinearLayout
                android:id="@+id/layoutBotoes1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@id/cardContato"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnLigar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="ðŸ“ž Ligar"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/btnSite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="ðŸŒ Site"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBotoes2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@id/layoutBotoes1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnMapa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="ðŸ—ºï¸ Mapa"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/btnCompartilhar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="ðŸ“¤ Compartilhar"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>