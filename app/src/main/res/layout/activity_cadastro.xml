<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.guiabairro.ui.CadastroActivity">



    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Imagem -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/light_gray"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imgFoto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:background="@android:color/darker_gray"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:contentDescription="Foto do comércio"/>

                <Button
                    android:id="@+id/btnSelecionarImagem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Adicionar Foto"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

            <!-- Nome -->
            <EditText
                android:id="@+id/edtNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do comércio"
                android:inputType="textCapWords"
                android:layout_marginBottom="12dp"/>

            <!-- Descrição -->
            <EditText
                android:id="@+id/edtDescricao"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Descrição"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:minLines="4"
                android:layout_marginBottom="12dp"/>

            <!-- Telefone -->
            <EditText
                android:id="@+id/edtTelefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefone"
                android:inputType="phone"
                android:layout_marginBottom="12dp"/>

            <!-- Endereço -->
            <EditText
                android:id="@+id/edtEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Endereço"
                android:inputType="textPostalAddress"
                android:layout_marginBottom="12dp"/>

            <!-- Horário -->
            <EditText
                android:id="@+id/edtHorario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Horário de funcionamento"
                android:inputType="text"
                android:layout_marginBottom="24dp"/>

            <!-- Botões -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Cancelar"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/btnSalvar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Salvar"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>